{
  "$schema": "https://jsonschema.org/draft/2020-12/schema",
  "description": "Animation Settings Extension JSON Schema",
  "type": "object",
  "properties": {
    "UI Animations": {
      "additionalProperties": false,
      "type": "object",
      "description": "List of visual elements that can be animated",
      "properties": {
        "Command Palette": {
          "$ref": "#/$defs/Animations",
          "description": "Animations for the Command Palette",
          "properties": {
            "animation": {
              "type": "string",
              "enum": ["None", "Scale", "Slide", "Flip", "Fade"]
            },
            "duration": {
              "$ref": "#/$defs/Duration"
            }
          }
        },
        "Primary Sidebar": {
          "$ref": "#/$defs/Animations",
          "description": "Animations for the Primary Sidebar",
          "properties": {
            "animation": {
              "type": "string",
              "enum": ["None", "Scale", "Slide", "Fade"]
            },
            "duration": {
              "$ref": "#/$defs/Duration"
            }
          }
        },
        "Secondary Sidebar": {
          "$ref": "#/$defs/Animations",
          "description": "Animations for the Secondary Sidebar",
          "properties": {
            "animation": {
              "type": "string",
              "enum": ["None", "Scale", "Slide", "Fade"]
            },
            "duration": {
              "$ref": "#/$defs/Duration"
            }
          }
        }
      }
    }
  },

  "$defs": {
    "Animations": {
      "type": "object",
      "additionalProperties": false
    },
    "Duration": {
      "type": "number",
      "description": "Duration of the animation in milliseconds",
      "minimum": 0,
      "maximum": 10000
    }
  }
}
